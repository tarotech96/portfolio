{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "rootPath/*": ["*"],
    }
  },

  "exclude": [
    "./node_modules"
  ]
}